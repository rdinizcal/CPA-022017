	<template>
		<name>Input</name>
		<declaration>int [0,1] peca;

int [0,1] buffer[BUFFER_SIZE];
int len, aux;

int dequeue(){

    int el = buffer[len-1];
    int i = 0;
    len--;
    while(i &lt; len){
        buffer[i] = buffer[i+1];
        i++;
    }
    
    buffer[i] = 0;

    return el;
}

